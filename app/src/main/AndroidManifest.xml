<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="leko.valmx.uhrenprojekt">

    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" /> <!-- These 2 bellow, only if you are targeting Android 12+ -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_CONNECT"
        tools:targetApi="s" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="s" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- These 2 bellow, only if you are targeting Android 10+ -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Uhrenprojekt">
        <activity
            android:name=".game.SinkShipActivity"
            android:exported="false" />
        <activity
            android:name=".nightmode.NightmodeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".newP.CustomizerActivity"
            android:exported="true"
            android:label="@string/title_activity_customizer"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".developertools.DeveloperActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".alarm.AlarmActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".calendar.CalendarActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".birthday.BirthdayActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".birthday.BirthdayAddActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".specials.SpecialsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".appearance.AppearanceActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".intro.IntroActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>